<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_bucket_delete_line_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="장바구니에 담긴 모든 메뉴를"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dialog_bucket_delete_line_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/dialog_bucket_delete_line_1_tv"
            app:layout_constraintTop_toBottomOf="@id/dialog_bucket_delete_line_1_tv"
            android:text="삭제하시겠어요?"
            android:textSize="16dp"
            android:textColor="@color/black"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialog_bucket_delete_btn_cancel_cv"
            android:layout_width="70dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@id/dialog_bucket_delete_line_1_tv"
            app:layout_constraintTop_toBottomOf="@id/dialog_bucket_delete_line_2_tv"
            android:layout_marginTop="30dp"
            android:elevation="0dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="#00A965"
            app:strokeWidth="1dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#00A965"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialog_bucket_delete_btn_ok_cv"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@id/dialog_bucket_delete_btn_cancel_cv"
            app:layout_constraintTop_toTopOf="@id/dialog_bucket_delete_btn_cancel_cv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="0dp"
            app:cardCornerRadius="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00A965">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체삭제"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.cardview.widget.CardView>

