<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/main_text_head_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요,"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/main_text_head_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스타벅스입니다."
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_text_head_1_tv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/main_login_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_text_head_2_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:elevation="30dp"
                app:cardCornerRadius="1dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_login_text_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스타벅스 리워드 회원"
                        android:textSize="17dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:id="@+id/main_login_text_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신규가입 첫 구매 시,"
                        android:textSize="17dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_login_text_1_tv"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        />
                    <TextView
                        android:id="@+id/main_login_text_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="무료음료 혜택을 드려요!"
                        android:textSize="17dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_login_text_2_tv"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/main_cv_cup"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/main_login_sign_up_button_cv"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="@id/main_login_text_3_tv"
                        app:layout_constraintTop_toBottomOf="@id/main_login_text_3_tv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="10dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00A965">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="회원가입"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/main_login_sign_in_button_cv"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toEndOf="@id/main_login_sign_up_button_cv"
                        app:layout_constraintTop_toBottomOf="@id/main_login_text_3_tv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginStart="10dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="#00A965"
                        app:strokeWidth="1dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="로그인"
                                android:textSize="16dp"
                                android:textColor="#00A965"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/main_mail_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_login_cv"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/main_mail_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's New"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toEndOf="@id/main_mail_iv"
                app:layout_constraintTop_toTopOf="@id/main_mail_iv"
                app:layout_constraintBottom_toBottomOf="@id/main_mail_iv"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"/>

            <ImageView
                android:id="@+id/main_alarm_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_alarm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_login_cv"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/main_banner_1_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_mail_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:elevation="0dp"
                app:cardCornerRadius="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_banner_summer_efrequency"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/main_banner_2_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_banner_1_cv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:elevation="0dp"
                app:cardCornerRadius="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_banner_summber_vibe"/>
            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
