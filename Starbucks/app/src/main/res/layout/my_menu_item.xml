<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="110dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_cancel_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:src="@drawable/ic_cancel_foreground"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="textdsfds"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="textdsfsdf"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="6000"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/priceUnit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="원"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="HOT"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_boundary1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="|"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Grande"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_boundary2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="|"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_cup"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="매장컵"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingLeft="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="담기"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:background="@drawable/white_corner_shpate_btn"
                />
            <TextView
                android:text="주문하기"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/corner_shpate_btn"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>